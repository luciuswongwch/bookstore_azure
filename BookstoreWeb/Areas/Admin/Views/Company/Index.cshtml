@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="d-flex align-items-center justify-content-between">
		<div class="float-start">
			<h2 class="text-primary">Company list</h2>
		</div>
		<div class="float-end">
			<a asp-controller="Company" asp-action="UpdateOrInsertIfNotExist" class="btn btn-primary">
				<i class="bi bi-plus"></i> &nbsp; Create new company
			</a>
		</div>
	</div>
	<br/>

	<table id="companyDataTable" class="table table-bordered table-stripped" style="width: 100%">
		<thead>
			<tr>
				<th>Name</th>
				<th>Address</th>
				<th>City</th>
				<th>State</th>
				<th>Phone number</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>


@section Scripts {
	<script src="~/js/company.js"></script>
}