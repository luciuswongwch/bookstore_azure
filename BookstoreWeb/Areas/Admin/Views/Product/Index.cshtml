@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="d-flex align-items-center justify-content-between">
		<div class="float-start">
			<h2 class="text-primary">Product list</h2>
		</div>
		<div class="float-end">
			<a asp-controller="Product" asp-action="UpdateOrInsertIfNotExist" class="btn btn-primary">
				<i class="bi bi-plus"></i> &nbsp; Create new product
			</a>
		</div>
	</div>
	<br/>

	<table id="productDataTable" class="table table-bordered table-stripped" style="width: 100%">
		<thead>
			<tr>
				<th>Title</th>
				<th>ISBN</th>
				<th>Price (CAD)</th>
				<th>Author</th>
				<th>Category</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>


@section Scripts {
	<script src="~/js/product.js"></script>
}