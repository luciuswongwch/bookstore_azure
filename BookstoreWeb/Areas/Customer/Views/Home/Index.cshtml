@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach(var product in Model) {
        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-6 my-2">
            <div class="card">
                <a asp-action="ProductDetails" asp-route-productId="@product.Id">
                    <img src="@product.ImageUrl" class="card-img-top" />
                </a>
                <div class="card-body">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text"><small class="text-muted">by @product.Author</small></p>
                </div>
                <div class="card-footer">
                    <small class="text-muted"><strike>Price: $@product.ListPrice.ToString("0.00")</strike></small><br />
                    as low as <b>$@product.Price100.ToString("0.00")</b>
                </div>
                <a asp-action="ProductDetails" class="btn btn-primary" style="border-top-left-radius: 0px; border-top-right-radius: 0px;" asp-route-productId="@product.Id">Details</a>
            </div>
        </div>
    }
</div>