@if (TempData["success"] != null || TempData["info"] != null || TempData["warning"] != null || TempData["error"] != null)
{
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
	<script>
		toastr.options.positionClass = "toast-bottom-right";
	</script>

	@if (TempData["success"] != null) {
		<script type="text/javascript">toastr.success("@TempData["success"]")</script>
	}

	@if (TempData["info"] != null) {
		<script type="text/javascript">toastr.info("@TempData["info"]")</script>
	}
		
	@if (TempData["warning"] != null) {
		<script type="text/javascript">toastr.warning("@TempData["warning"]")</script>
	}

	@if (TempData["error"] != null) {
		<script type="text/javascript">toastr.error("@TempData["error"]")</script>
	}
}